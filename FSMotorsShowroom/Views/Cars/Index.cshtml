@model IEnumerable<FSMotorsShowroom.Models.Car>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<!-- Add these links to your HTML head section -->
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">
<script type="text/javascript" charset="utf8" src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>
<style>
    #carsTable thead th {
        color: #FFFFFF; /* Font color */
        background-color: #333333; /* Background color */
    }
</style>
<h4>Manage Car</h4>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div>
    <table id="carsTable" class="table table-striped table-bordered" style="display:block;overflow-x: auto; white-space: nowrap;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transmission)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FuelType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FuelMilage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Features)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EngineNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BuyingPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SellingPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaintananceCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShowroomCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalesTax)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MakeCompany)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MakeYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoOfCylinders)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoresPower)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransmissionMode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TankCapacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doors)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PassangerCapacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FrontImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BackImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InteriorImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EngineImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BodyImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Transmission)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FuelType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FuelMilage)
