            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoOfCylinders)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoresPower)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransmissionMode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TankCapacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Doors)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PassangerCapacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FrontImage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BackImage)
