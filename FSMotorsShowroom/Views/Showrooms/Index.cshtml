@model IEnumerable<FSMotorsShowroom.Models.Showroom>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<!-- Add these links to your HTML head section -->
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">
<script type="text/javascript" charset="utf8" src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>
<style>
    #showroomTable thead th {
        color: #FFFFFF; /* Font color */
        background-color: #333333; /* Background color */
    }
</style>
<h4>Showroom</h4>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="showroomTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ShowroomName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShowroomAddress)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ShowroomName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShowroomAddress)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ShowroomId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ShowroomId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ShowroomId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<script type="text/javascript">
    $(document).ready(function () {
        $('#showroomTable').DataTable();
    });
</script>