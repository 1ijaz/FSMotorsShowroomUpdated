@model FSMotorsShowroom.Models.Showroom

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="card">
    <div class="card-header">
        <h3 class="text-uppercase">Add Showroom</h3>
    </div>

    <div class="card-body">
        <form asp-action="Create">

            <div class="row">
                <div class="col-md-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="ShowroomName" class="control-label"></label>
                        <input asp-for="ShowroomName" class="form-control" />
                        <span asp-validation-for="ShowroomName" class="text-danger"></span>
                    </div>
                </div>


                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ShowroomAddress" class="control-label"></label>
                        <input asp-for="ShowroomAddress" class="form-control" />
                        <span asp-validation-for="ShowroomAddress" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


