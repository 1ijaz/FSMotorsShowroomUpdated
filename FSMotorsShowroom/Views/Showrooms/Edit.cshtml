@model FSMotorsShowroom.Models.Showroom

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<h1>Edit</h1>

<h4>Showroom</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ShowroomId" />
            <div class="form-group">
                <label asp-for="ShowroomName" class="control-label" style="position:static"></label>
                <input asp-for="ShowroomName" class="form-control" />
                <span asp-validation-for="ShowroomName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShowroomAddress" class="control-label" style="position:static"></label>
                <input asp-for="ShowroomAddress" class="form-control" />
                <span asp-validation-for="ShowroomAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

