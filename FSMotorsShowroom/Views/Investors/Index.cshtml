@model IEnumerable<FSMotorsShowroom.Models.Investor>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<!-- Add these links to your HTML head section -->
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">
<script type="text/javascript" charset="utf8" src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>
<style>
    #investorTable thead th {
        color: #FFFFFF; /* Font color */
        background-color: #333333; /* Background color */
    }
</style>
<h4>Manage Investors</h4>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="investorTable" class="display table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InvestorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvestorEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvestorContact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvestorAddress)
            </th>
              <th>
                @Html.DisplayNameFor(model => model.TotalInvestAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvestAllocatedAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvestUnallocatedAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.InvestorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvestorEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvestorContact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvestorAddress)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalInvestAmount)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.InvestAllocatedAmount)
                </td>  

                <td>
                    @Html.DisplayFor(modelItem => item.InvestUnallocatedAmount)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Profit)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td> 
            <td>
                <a asp-action="Edit" asp-route-id="@item.InvestorId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.InvestorId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.InvestorId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<script type="text/javascript">
    $(document).ready(function () {
        $('#investorTable').DataTable();
    });
</script>